<?xml version="1.0" encoding="utf-8" ?>

<resources>

	<style name="Theme.Splash" parent="Theme.Base">
		<item name="android:windowNoTitle">true</item>
		<item name="colorPrimary">@color/primary</item>
	</style>

	<style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
        <item name="android:windowFullscreen">true</item>
	</style>

	<style name="Theme.AppTheme" parent="Theme.Base">

	</style>
	
	<style name="Text.Large" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/text_dark</item>
	</style>

	<style name="Text.Medium" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/text_dark</item>
	</style>

    <style name="Text.Medium.White" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Text.Medium.Primary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary</item>
    </style>

	<style name="Text.Small" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">@color/text_light</item>
	</style>

    <style name="Text.Small.Primary" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Small.Black" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/text_dark</item>
    </style>

</resources>
